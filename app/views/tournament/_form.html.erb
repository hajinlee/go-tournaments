<%= form_with model: @tournament, local: true do |form| %>
  <p>
    <%= form.label :main %><br>
    <%= form.text_field :title %><br>
    <%= form.date_field :start_date %>
    <%= form.date_field :end_date %>
    <%= form.text_field :venue %><br>
    <%= form.text_field :city %>
    <%= form.text_field :state %><br>
    <%= form.text_field :country %><br>
    <%= form.file_field :image %>
  </p>

  <p>
    <%= form.label :rules %><br>
    <%= form.check_box :is_rated %><br>
    <%= form.text_area :game_rules %><br>
    <%= form.text_field :time_setting %>
  </p>

  <p>
    <%= form.label :logistics %><br>
    <%= form.text_field :registration_fee %>
    <%= form.time_field :check_in_begins %><br>
    <%= form.check_box :first_round_begins %><br>
  </p>

  <p>
    <%= form.label :organizer %><br>
    <%= form.text_field :organizer %><br>
    <%= form.text_field :contact %><br>
    <%= form.password_field :password_digest %><br>

  <p>
    <%= form.submit %>
  </p>

<% end %>
