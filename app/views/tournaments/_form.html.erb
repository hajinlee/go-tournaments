<div class="tournament-form">
  <%= form_for @tournament, local: true do |f| %>

    <% if @tournament.errors.any? %>
      <div id="error_explanation">
        <h2>
          <%= pluralize(@tournament.errors.count, "error") %> prohibited
          this page from being saved:
        </h2>
        <ul>
          <% @tournament.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="fieldset">
      <div class="grid-x grid-padding-x">
        <div class="cell medium-12">
          <%= f.label :title, "Tournament title:" %>
          <%= f.text_field :title %>
        </div>

        <div class="cell medium-6">
          <%= f.label :start_date, "Start date:" %>
          <%= f.date_field :start_date %>
        </div>

        <div class="cell medium-6">
          <%= f.label :end_date, "End date:" %>
          <%= f.date_field :end_date %>
        </div>

        <div class="cell medium-6">
          <%= f.label :country, "Country:" %>
          <%= f.text_field :country %>
        </div>

        <div class="cell medium-6">
          <%= f.label :state, "State:" %>
          <%= f.text_field :state %>
        </div>

        <div class="cell medium-6">
          <%= f.label :city, "City:" %>
          <%= f.text_field :city %>
        </div>

        <div class="cell medium-6">
          <%= f.label :venue, "Venue:" %>
          <%= f.text_field :venue %>
        </div>

        <div class="cell medium-12">
          <%= f.label :description, "Notes:" %>
          <%= f.text_area :description, placeholder: "Any side events or special guests?" %>
        </div>

        <div class="cell">
          <%= f.label :image, "Tournament image:" %>
          <%= f.file_field :image %>
        </div>
      </div>
    </div>

    <div class="fieldset">
      <div class="grid-x grid-padding-x">
        <div class="cell medium-6">
          <%= f.label :is_rate, "Is the tournament rated?" %>
          <%= f.text_field :is_rated %>
        </div>

        <div class="cell medium-6">
          <%= f.label :game_rules, "Game rules:" %>
          <%= f.text_field :game_rules, placeholder: "AGA Rules? Japanese Rules? Ing Rules?" %>
        </div>

        <div class="cell medium-6">
          <%= f.label :time_setting, "Time limit:" %>
          <%= f.text_field :time_setting, placeholder: "How much time per player for each game?" %>
        </div>

        <div class="cell medium-6">
          <%= f.label :registration_fee, "Registration fee:" %>
          <%= f.text_field :registration_fee %>
        </div>

        <div class="cell medium-6">
          <%= f.label :check_in_begins, "Check-in begins at:" %>
          <%= f.time_field :check_in_begins %>
        </div>

        <div class="cell medium-6">
          <%= f.label :first_round_begins, "First round begins at:" %>
          <%= f.time_field :first_round_begins %>
        </div>

        <div class="cell medium-6">
         <%= f.label :organizer, "Organizer:" %>
         <%= f.text_field :organizer %>
        </div>

        <div class="cell medium-6">
          <%= f.label :contact, "Contact info:" %>
          <%= f.text_field :contact, placeholder: "Email or phone number for inquery" %>
        </div>

        <%= f.hidden_field :author_user_id, value: current_user.id %>
      </div>
    </div>

    <div class="grid-x">
      <div class="cell">
        <%= f.submit 'Submit', { class: "button right" } %>
      </div>
    </div>
  <% end %>
</div>
