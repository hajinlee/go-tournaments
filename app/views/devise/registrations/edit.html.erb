<div class="grid-x grid-margin-x">
  <div class="cell edit-header">
    <h3>Edit Account Settings</h3>
      <%= link_to "Delete my account", user_registration_path,
                   { method: :delete, class: 'button small alert right', data: { confirm: "Are you sure?" } } %>
  </div>
</div>

<%= form_for(resource, as: resource_name, url: user_registration_path, html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="grid-x grid-margin-x medium-up-3">
    <div class="cell">
      <%= f.label :first_name, "First Name:" %>
      <%= f.text_field :first_name %>
    </div>

    <div class="cell">
      <%= f.label :last_name, "Last Name:" %>
      <%= f.text_field :last_name %>
    </div>

    <div class="cell">
      <%= f.label :email, "Email:" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>
    </div>

    <div class="cell">
      <%= f.label :password, "Password: (leave blank to not change)" %>
      <%= f.password_field :password, autocomplete: "off", placeholder: '8 characters minimum' %>
    </div>

    <div class="cell">
      <%= f.label :password_confirmation, "Password Confirmation:" %>
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
    </div>

    <div class="cell">
      <%= f.label :current_password, "Current Password: (required for edit)" %>
      <%= f.password_field :current_password, autocomplete: "off" %>
    </div>
  </div>

  <div class="grid-x grid-margin-x">
    <div class="cell">
      <%= f.submit "Update", { class: 'button right' } %>
    </div>
  </div>
<% end %>
