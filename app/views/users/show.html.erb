<div class="container">
  <div class="field">
    <h2><%= @user.first_name %> <%= @user.last_name %></h2>
  </div>

  <div class="field">
    <%= link_to "Edit Profile", edit_user_registration_path %>&nbsp&nbsp/&nbsp&nbsp
    <a href="http://agagd.usgo.org/player/<%= @user.aga_number %>/" target="blank">AGA Player Card</a>
  </div>

  <div class="field">
    <h4>Registered Tournaments</h4>
  </div>
  <div class="field">
    <table id="my_registration_list">
      <tr>
        <th>Title</th>
        <th>Start Date</th>
        <th>City</th>
        <th></th>
      </tr>

      <% @registration.each do |r| %>

        <tr>
          <td><%= r.tournament.title %></td>
          <td><%= r.tournament.start_date %></td>
          <td><%= r.tournament.city %></td>
          <td><%= link_to 'Show', tournament_path %></td>
        </tr>
      <% end %>

    </table>
    </div>

    <div class="field">
      <h4>My Tournaments</h4>
    </div>
    <div class="field">
      <table id="my_tournament_list">
        <tr>
          <th>Title</th>
          <th>Start Date</th>
          <th>City</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>

        <% @tournament.each do |r| %>
          <tr>
            <td><%= r.title %></td>
            <td><%= r.start_date %></td>
            <td><%= r.city %></td>
            <td><%= link_to 'Show', tournament_path %></td>
            <td><%= link_to 'Edit', edit_tournament_path %></td>
            <td><%= link_to 'Delete', tournament_path,
                    method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </table>
      </div>
</div>
