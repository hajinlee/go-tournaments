<div class="main tournament-show">
  <div class="container">
    <div class="tournament">

      <div class="info">
        <!-- image -->
        <h2 class="tournament-title"> <%= @tournament.title %> </h2>
        <p class="tournament-date"> <%= @tournament.start_date %> </p>
        <p class="tournament-venue"> <%= @tournament.city %> </p>
      </div>
      <%= link_to 'Edit', edit_tournament_path(tournament) %>
      <%= link_to 'Destroy', tournament_path(tournament),
          method: :delete,
          data: { confirm: 'Are you sure?' } %>
    </div>
  </div>
</div>
