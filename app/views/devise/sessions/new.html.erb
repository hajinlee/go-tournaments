<div class="container">
<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="fieldset-blue">
  <div class="field">
    <h4><%= f.label :email %>&nbsp&nbsp
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %></h4>
  </div>

  <div class="field">
    <h4><%= f.label :password %>&nbsp&nbsp
    <%= f.password_field :password, autocomplete: "off" %></h4>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>&nbsp&nbsp
      <%= f.label :remember_me %>
    </div>
  <% end -%>
</div>

  <div class="actions">
    <%= f.submit "Log in", { class: 'btn-primary' } %>
  <% end %>
    <%= render "devise/shared/links" %>
  </div>

</div>
