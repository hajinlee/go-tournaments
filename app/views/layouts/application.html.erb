<!DOCTYPE html>
<html>
  <head>
    <title>Go Tournaments</title>
    <%= favicon_link_tag 'favicon.ico' %>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="application.css">
    <link rel="stylesheet" href="bootstrap.css">

  </head>

  <body>

    <nav class="navbar navbar-inverse">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href="/">Go Tournaments</a>
        </div>

        <ul class="nav navbar-nav navbar-right">
          <% if user_signed_in? %>
            <%= link_to "Create Tournament", new_tournament_path, { class: 'btn btn-danger navbar-btn' } %>
            <%= link_to "My Page", current_user, { class: 'btn btn-success navbar-btn' } %>
            <%= link_to "Log-out", destroy_user_session_path, { :method => :delete, class: 'btn btn-warning navbar-btn' } %>
          <% else %>
            <%= link_to "Sign up", new_user_registration_path, { class: 'btn btn-success navbar-btn' } %>
            <%= link_to "Log-in", new_user_session_path, { class: 'btn btn-warning navbar-btn' } %>
          <% end %>
        </ul>

      </div>
    </nav>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <%= yield %>

    <div class="modal-footer">
		    <p>Designed by Hajin Lee</p>
		</div>

  </body>
</html>
