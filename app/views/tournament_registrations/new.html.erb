            url: {controller: "tournament_registrations", action: "create", method: "get", local: true} do |f| %>

  <% if @tournament_registration.errors.any? %>
    <div id="error_explanation">
      <h3>
        <%= pluralize(@tournament.errors.count, "error") %> prohibited
        this page from being saved:
      </h3>
      <ul>
        <% @tournament.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
